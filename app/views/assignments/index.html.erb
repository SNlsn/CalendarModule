<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Assignment type</th>
    <th>Starts at</th>
    <th>Duration hours</th>
    <th>Duration minutes</th>
    <th>Ends at</th>
    <th>All day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.title %></td>
    <td><%= assignment.description %></td>
    <td><%= assignment.assignment_type %></td>
    <td><%= assignment.starts_at.strftime("%A %b. %-e, %Y, %l:%M%p") %></td>
    <td><%= assignment.duration_hours %></td>
    <td><%= assignment.duration_minutes %></td>
    <td><%= assignment.ends_at.strftime("%A %b. %-e, %Y, %l:%M%p") %></td>
    <td><%= assignment.all_day %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

